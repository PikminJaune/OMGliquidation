{% extends 'core/base.html.twig' %}
{% block title %}
	Connexion
{% endblock %}
{% block content %}
	<div class="row">
		<div class="col-lg-4 mx-auto">
			<div class="text-center">
				<h1 class="my-3">Connexion</h1>
				{% if notification %}
					<div class="alert {{ notification.color }}">{{ notification.content }}</div>
				{% endif %}
			</div>
			<form action="{{ path('app_connexion') }}" method="post">
				<div class="form-outline mb-5">
					<label class="form-label" for="username">Courriel :
					</label>
					<input class="form-control" type="text" id="username" name="_username">
				</div>

				<div class="form-outline mb-5">
					<label class="form-label" for="password">Mot de passe :
					</label>
					<input class="form-control" type="password" id="password" name="_password">
				</div>

				<input type="hidden" name="_target_path" value="{{ path('app_profil') }}">

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<div class="text-center">
					<button type="submit" class="btn btn-primary px-5 py-2" style="font-size:18px;">Connexion</button>
				</div>

			</form>
		</div>
	</div>

{% endblock %}
