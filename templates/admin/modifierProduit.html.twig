{% extends 'core/base.html.twig' %}
{% form_theme form_modif_produit 'bootstrap_5_layout.html.twig' %}

{% block content %}


	<div class="d-flex justify-content-center">
		<div class="col-6">
			<h3>Modifier un produit</h3>


			{{ form_start(form_modif_produit, {'attr': {'class': 'besoin-validation-inscription', 'novalidate': 'novalidate' }}) }}
			<div class="row">
				<div>
					{{ form_row(form_modif_produit.nom) }}
				</div>

			</div>
			<div class="row">
				<div class="col-6">
					{{ form_row(form_modif_produit.prix) }}
				</div>
				<div class="col-6">
					{{ form_row(form_modif_produit.quantiteEnStock) }}
				</div>
			</div>
			<div class="row">
				<div class="col-6">
					{{ form_row(form_modif_produit.categorie) }}
				</div>
				<div class="col-6">{{ form_row(form_modif_produit.imagePath) }}
				</div>
			</div>
			<div class="row">

				{{ form_row(form_modif_produit.description) }}

			</div>

			<div class="d-flex justify-content-center mt-2">
				{{ form_row(form_modif_produit.btnModifier) }}
			</div>
			{{ form_end(form_modif_produit) }}


		{% endblock %}
